<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.BitWyze.polarionlive2014"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
         <activity
            android:name=".PartnerActivity"
            android:label="@string/partners" >
        </activity>
        
         <activity
            android:name=".AgendaListActivity"
            android:label="@string/agenda" >
        </activity>
        
        <activity
            android:name=".RaffleActivity"
            android:label="@string/raffle" >
        </activity>
        
        <activity
            android:name=".RaffleContactActivity"
            android:label="Contact Info" >
        </activity>
    </application>

</manifest>
